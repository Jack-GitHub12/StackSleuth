{
  "name": "@stacksleuth/browser-agent",
  "version": "0.2.3",
  "description": "Advanced browser automation and performance monitoring agent - Playwright/Puppeteer integration, website crawling, user interaction simulation, screenshot capture, and real-time debugging capabilities.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "benchmark": "node benchmarks/automation-performance.js",
    "performance:test": "clinic doctor -- node benchmarks/memory-test.js"
  },
  "keywords": [
    "performance",
    "monitoring",
    "profiling",
    "stacksleuth",
    "observability",
    "analytics",
    "optimization",
    "instrumentation",
    "apm",
    "real-time",
    "browser",
    "automation",
    "playwright",
    "puppeteer"
  ],
  "dependencies": {
    "@stacksleuth/core": "^0.2.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "playwright": "^1.40.0",
    "puppeteer": "^21.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
